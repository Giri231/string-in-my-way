#include<iostream>

using namespace std;

int main()
{
    char a[50];
    cin.getline(a,50);
    int i=0;
    int vowel =0;
    int cons=0;
    while(a[i]!='\0')
    {
        if(a[i]=='a' || a[i] =='e' || a[i]=='i' || a[i]=='o' || a[i]=='u' || a[i]=='A' || a[i]=='E' || a[i]=='I' || a[i]=='O' || a[i]=='U')
        {
            vowel++;
        }
        else if(a[i]>='a' && a[i]<='z' || a[i]>='A' && a[i]<='Z')
        {
        cons++;
        }
        i++;
    }
    cout<<vowel<<" "<<cons;
    return 0;
    
}
